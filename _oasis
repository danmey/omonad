  Path:             examples/
  MainIs:           advanced.ml
  BuildTools:       ocamlbuild
  BuildDepends:     compiler-libs, compiler-libs.common
  ByteOpt+:         -ppx src/ppx_monad.byte
  NativeOpt+:       -ppx src/ppx_monad.byte
  Install:          false

Executable "parsing"
  Path:             examples/
  MainIs:           parsing.ml
  BuildTools:       ocamlbuild
  BuildDepends:     compiler-libs, compiler-libs.common
  ByteOpt+:         -ppx src/ppx_monad.byte
  NativeOpt+:       -ppx src/ppx_monad.byte
  Install:          false

Executable "patterns"
  Path:             examples/
  MainIs:           patterns.ml
  BuildTools:       ocamlbuild
  BuildDepends:     compiler-libs, compiler-libs.common
  ByteOpt+:         -ppx src/ppx_monad.byte
  NativeOpt+:       -ppx src/ppx_monad.byte
  Install:          false

